{% extends 'base.html.twig' %}

{% block title %}Liste des employés - TaskLinker{% endblock %}

{% block body %}
    <main>
        <header>
            <div id="current-user"></div>
            <div id="title-page">
                <h1>Équipe</h1>
            </div>
        </header>
        <div id="content">
            <table id="team-container">
                <thead>
                    <tr>
                    <th>Prénom, Nom</th>
                    <th>Statut</th>
                    <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for employee in employees %}
                        <tr>
                            <td>
                                <div class="employee-infos">
                                    <div class="employee-avatar">
                                        {{ employee.name|slice(0,1) }} {{ employee.firstname|slice(0,1) }}
                                    </div>
                                    <div class="employee-coords">
                                        <strong>{{ employee.firstname }} {{ employee.name }}</strong>
                                        <span>{{ employee.email }}</span>
                                    </div>
                                </div>
                            </td>
                            <td>{{ employee.contract.getLabel() }}</td>
                            <td>
                                <a class="button button-edit-team" href="{{ path('app_modify_employee', {id:employee.id}) }}">
                                Éditer
                                </a>
                                <a class="delete-team" href="{{ path('app_suppr_employee', {id:employee.id}) }}">
                                Supprimer
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        </main>
{% endblock %}
